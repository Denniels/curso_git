# .streamlit/secrets.toml.example
# Este es un archivo de ejemplo para secrets.toml
# Copia este archivo a .streamlit/secrets.toml y personaliza los valores
# NO subas el archivo secrets.toml real a tu repositorio, está incluido en .gitignore

[general]
# Versión de la aplicación
app_version = "1.0.0"
# Nombre del autor
author = "Tu Nombre"

# Si necesitas acceder a servicios externos, puedes configurar credenciales aquí
[external_services]
# Ejemplo: API key para un servicio externo
# api_key = "tu-api-key-aquí"
# api_url = "https://api.ejemplo.com"

# Para bases de datos
[connections.database]
# Ejemplo: Configuración para una base de datos
# host = "localhost"
# port = 3306
# database = "mi_base_de_datos"
# username = "usuario_db"
# password = "contraseña_db"

# Puedes acceder a estos valores en tu código con:
# st.secrets["general"]["app_version"]
# st.secrets["external_services"]["api_key"]
# etc.
